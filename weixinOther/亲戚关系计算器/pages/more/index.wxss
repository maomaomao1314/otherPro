.container {
    background: #333;
}

input {
    flex: 1;
    margin-right: 32rpx;
    padding: 10rpx 16rpx;
    height: 60rpx;
    border-bottom: 2rpx solid #666;
    line-height: 60rpx;
    font-family: Arial,Helvetica,"Microsoft Yahei";
    font-size: 16px;
    color: rgba(255,255,255,.9);
}

button {
    width: 150rpx;
    height: 80rpx;
    background: #e7763e;
    line-height: 80rpx;
    font-size: 32rpx;
    color: rgba(255,255,255,.9);
    border-radius: 5rpx;
}

.search {
    display: flex;
    padding: 40rpx 32rpx;
    width: 100%;
    box-sizing: border-box;
}

.search .btn-equal-hover {
    background: #e66747;
}

.list {
    width: 100%;
    box-sizing: border-box;
    padding: 0 32rpx;
    color: rgba(255,255,255,.9);
}

.list .h1 {
    margin-bottom: 16rpx;
    line-height: 32rpx;
    font-size: 32rpx;
    color: rgba(255,255,255,.7);
}

.list .item {
    padding-left: 36rpx;
}

.recommend {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 20rpx 0;
    box-sizing: border-box;
}

.recommend .title {
    border-left: 6rpx solid #e7763e;
    padding-left: 16rpx;
    margin-bottom: 30rpx;
    line-height: 48rpx;
    font-size: 30rpx;
    color: #aaa;
}

.recommend .app {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.recommend .app navigator {
    flex: 1;
    text-align: center;
}

.recommend .app image {
    display: block;
    width: 80rpx;
    height: 80rpx;
    margin: 0 auto;
}

.recommend .app text {
    line-height: 60rpx;
    color: #aaa;
}